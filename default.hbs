<footer class="blog-footer" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div class="blog-section-overlay">
    <a class="subscribe" href="{{@blog.url}}/rss/"><span class="fa fa-rss"></span></a>
    <div class="inner">
      <section>All content copyright <a href="{{@blog.url}}/">{{@blog.title}}</a> &copy; {{date format="YYYY"}} &bull; All rights reserved.</section>
      <section>Humans need not apply.</section>
    </div>
  </div>
</footer>

<a href="#" class="btn back-to-top btn-dark btn-fixed-bottom">
  <span class="fa fa-chevron-up"></span>
</a>

