{{!< default}}

{{> nav}}

{{#post}}
  <section class="blog-post-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="wrapper">
      <div class="post-title">
        <h1>{{title}}</h1>
      </div>
      <div class="post-meta">
        <time datetime="{{date format='DD-MM-YYYY'}}" class="post-day-month">{{date format="DD MMM YYYY"}}</time>
      </div>
    </div>
  </section>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <article class="{{post_class}}">
          <div class="post-content">
              {{content}}
          </div>
          <footer class="post-footer">
              {{#if tags}}
                <div class="post-tags">
                  <span class="fa fa-tags"></span> {{tags separator="&nbsp;&nbsp;"}}
                </div>
              {{/if}}
          </footer>
        </article>
      </div>
    </div>
  </div>
{{/post}}
